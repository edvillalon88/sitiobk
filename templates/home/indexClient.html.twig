{% extends 'base-general.html.twig' %}

{% block body %}

<section id="banner">
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
      <!-- Slide One - Set the background image for this slide in the line below -->
      <div class="carousel-item active" style="background-image: url('images/slider01.jpg')">
        <div class="carousel-caption d-md-block text-left">
          <h2 class="display-4 text-uppercase">{% trans %}h_mercadotecnia{% endtrans %}</h2>
          <p class="lead">{% trans %}slider_mercado{% endtrans %}</p>
          <a class="btn btn-primary btn-sm" href="{{ path('mercadotecnia') }}"
            role="button">{% trans %}b_leer_mas{% endtrans %}</a>
        </div>
      </div>
      <!-- Slide Two - Set the background image for this slide in the line below -->
      <div class="carousel-item" style="background-image: url('images/slider03.jpg')">
        <div class="carousel-caption d-md-block text-left">
          <h2 class="display-4 text-uppercase">{% trans %}h_importacion{% endtrans %}</h2>
          <p class="lead">{% trans %}slider_import{% endtrans %}</p>
          <a class="btn btn-primary btn-sm" href="{{ path('importaciones') }}"
            role="button">{% trans %}b_leer_mas{% endtrans %}</a>
        </div>
      </div>
      <!-- Slide three - Set the background image for this slide in the line below -->
      <div id="slideImport" class="carousel-item" style="background-image: url('images/slider02.jpg')">
        <div class="carousel-caption d-md-block text-left">
          <h2 class="display-4 text-uppercase">{% trans %}h_exportacion{% endtrans %}</h2>
          <p class="lead">{% trans %}slider_export{% endtrans %}</p>
          <a class="btn btn-primary btn-sm" href="{{ path('exportaciones') }}"
            role="button">{% trans %}b_leer_mas{% endtrans %}</a>
        </div>
      </div>
      <!-- Slide four - Set the background image for this slide in the line below -->
      <div class="carousel-item" style="background-image: url('images/slider04.jpg')">
        <div class="carousel-caption  d-md-block text-left">
          <h2 class="display-4 text-uppercase">{% trans %}h_logistica{% endtrans %}</h2>
          <p class="lead">{% trans %}slider_logistica{% endtrans %}</p>
          <a class="btn btn-primary btn-sm" href="logistica.html" role="button">{% trans %}b_leer_mas{% endtrans %}</a>
        </div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</section>
<section>
  <div class="container myContainer">
    <div class="row">
      <div class="col-md-12 col-lg-4 col-sm-12 col-xs-12 text-center text-lg-left">
        <h1>{% trans %}h_quienes_somos{% endtrans %}</h1>
        <p>{% trans %}p_index_text1{% endtrans %}</p>
        <p>{% trans %}p_index_text2{% endtrans %}</p>
      </div>
      <div class=" col-md-12 col-lg-8 col-sm-12 col-xs-12 center-sm">
        <h1>{% trans %}h_idx_renglones{% endtrans %}</h1>
        <div id="carrouselRenglones" class="carousel slide" data-ride="carousel" data-interval="false">

          <div class="carousel-inner" role="listbox">

                {% for key, renglon in renglones %}

                {% if key % 3 == 0 %}                
                {% if key== 0 %}
                <div class="carousel-item active ">
                {%else%}
                <div class="carousel-item">
                {%endif%}
                <div class="row">
                  <div class="col-1 d-none d-md-block d-lg-block  d-xs-block"></div>
                {%endif%}

                <div class="col-md-3 col-lg-3 col-sm-12 col-xs-4 ">
                  <div class="card "> <img class="card-img-top" src="{{ asset('uploads/imagenes/' ~ renglon.imagen) }}"
                      alt="nombre del renglon">
                    <div class="card-body">
                      <h5 class="card-title">{%if locale == 'es' %}{{ renglon.nombre }} {%else%} {{renglon.nombreEn}}
                        {%endif%}</h5>
                      <p class="card-text">{%if locale == 'es' %}{{ renglon.descripcion }} {%else%} {{renglon.descripcionEn}}
                        {%endif%}</p>
                    </div>
                  </div>
                </div>

                {% if (key + 1) % 3 == 0 or (key + 1) >= renglones|length %}
                <div class="col-1 d-none d-md-block d-lg-block  d-xs-block"></div>
                </div>
                </div>
                {%endif%}
                

                {% else %}
                <div class="col-md-3 col-lg-3 col-sm-12 col-xs-4 ">
                  <div class="card ">
                    <div class="card-body">
                      <h5 class="card-title"></h5>
                      <p class="card-text">{% trans %}msg_no_registros{% endtrans %}</p>
                    </div>
                  </div>
                </div>
             
                {% endfor %}

          </div>
          <a class="carousel-control-prev" href="#carrouselRenglones" role="button" data-slide="prev"> <span
              class="carousel-control-prev-icon" aria-hidden="true"></span> <span class="sr-only">Previous</span> </a>
          <a class="carousel-control-next" href="#carrouselRenglones" role="button" data-slide="next"> <span
              class="carousel-control-next-icon" aria-hidden="true"></span> <span class="sr-only">Next</span> </a>
        </div>
      </div>
    </div>
  </div>
</section>
<section id="noticia" class="resalt-section">
  <div class="container myContainer">
    <div class="row">
      <div class="col-xl-4 col-lg-12 text-sm-center ">
        <img src="{%if noticia != null and noticia.imagen != null %} {{ asset('uploads/imagenes/' ~ noticia.imagen) }} {%endif%}"
          class="img-fluid" alt="Placeholder image"></div>
      <div class="col-xl-8 col-lg-12 text-md-left text-sm-center">
        <h2>{%if locale == 'es' %} {{noticia.titulo}} {%else%} {{noticia.tituloEn}}{%endif%}</h2>
        <h4>{%if locale == 'es' %} {{noticia.subtitulo}} {%else%} {{noticia.subtituloEn}}{%endif%}</h4>
        <p>{%if locale == 'es' %} {{noticia.contenido}} {%else%} {{noticia.contenidoEn}}{%endif%}</p>

        <span>{% trans %}msg_fecha{% endtrans %}: {{noticia.fechaHora | date("d M Y")}}</span>
      </div>
    </div>
  </div>
</section>
<section id="clientesHome">
  <div class="container myContainer text-center">
    <h1>{% trans %}h_idx_clientes{% endtrans %}</h1>
    <ul class="list-client">
      {% for cliente in clientes %}
      <li><a href="{{cliente.url}}"><img src="{{ asset('uploads/imagenes/' ~ cliente.imagen) }}" width="160" height="160"
            alt="{{cliente.usuario.nombreApellidos}}" title="{{cliente.usuario.nombreApellidos}}" /></a></li>
      {% else %}
      <li>{% trans %}msg_no_registros{% endtrans %}</li>
      {% endfor %}

    </ul>
  </div>
</section>

<section class="text-center" id="dondeEstamos">

  <h1>{% trans %}h_idx_estamosen{% endtrans %}</h1>
  <div class="text-center container-fluid gray-cont" style="padding: 40px 0px;">
    <div class="container myContainer">
      <div class="row">
        <div class="col-md-3 text-md-left">
          <h3>{% trans %}h_idx_datos_contact{% endtrans %}</h3>
          <p>{% trans %}p_direccion{% endtrans %}</p>

          <p>{% trans %}h_mercadotecnia{% endtrans %}: +53 7835 5220<br>
            Email: <a href="mailto:clarita@bkimp.co.cu">clarita@bkimp.co.cu</a>
          </p>
          <p>
            {% trans %}h_importaciones{% endtrans %}: +53 7832 5250<br>
            Email: <a href="mailto:taimi@bkimp.co.cu">taimi@bkimp.co.cu</a>
          </p>
          <p>
            {% trans %}h_exportaciones{% endtrans %}: +53 7835 5223<br>
            Email: <a href="#">lis@bkimp.co.cu</a>
          </p>
          <p>
            {% trans %}h_logistica{% endtrans %}: +53 7835 5276<br>
            Email: <a href="mailto:natycary@bkimp.co.cu">natycary@bkimp.co.cu</a>

          </p>
        </div>
        <div class="col-md-9 text-right">
          <div id="mapaGoogle" style="width: 100%; height: 400px; background-color: #686868; float: right;"> </div>
        </div>
      </div>
    </div>
</section>

{% endblock %}
{% block javascripts %}
<script>
  $(document).ready(function () {
    $(".who-active").removeClass("active");
    $("#homeLink").addClass("active");
  })

</script>
{% endblock %}
{% extends 'base.html.twig' %}


{% block body %}  

<h1 class="h3 mb-2 text-gray-800">Clientes</h1>
<p class="mb-4"></p>

<!-- DataTales Example -->
<div class="card shadow mb-4">
  <div class="card-header py-3 flex">
    <h5 class="m-0 font-weight-bold text-primary" style="display:inline">Lista</h5>
    <a name="" id="" class="btn btn-primary float-right" href="{{ path('cliente_new') }}" role="button">Nuevo</a>
    
  </div>
  
  <div class="card-body">
    {% if error != '' %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ error }}        
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endif %}
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>                
                <th>Nombre</th>
                <th>Correo</th>                
                <th></th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>Nombre</th>
                <th>Correo</th>
                <th></th>
            </tr>
        </tfoot>
        <tbody>
            {% for cliente in clientes %}
                <tr>                    
                  <td>{{ cliente.usuario.nombre }} {{ cliente.usuario.apellidos }}</td>
                  <td>{{ cliente.usuario.username }}</td>
                  
                  <td >
                    <a class="btn btn-success" href="{{ path('cliente_edit', {'id': cliente.id}) }}">Editar</a>
                    {{ include('cliente/_delete_form.html.twig') }}
                    
                  </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">No hay registros</td>
                </tr>
            {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>
{% endblock %}
